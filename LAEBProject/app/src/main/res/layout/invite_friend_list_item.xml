<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:id="@+id/playerpic"
            android:src="@drawable/pic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/playerpic"
            android:layout_toLeftOf="@+id/ly"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Name"/>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/black_upcoming_game"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="bottom"
                    android:text="Goal Keeper"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:text="4.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:visibility="visible"
                        android:id="@+id/rating_num" />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:visibility="visible"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/rating_num"
                        style="?android:attr/ratingBarStyleSmall"
                        android:id="@+id/ratingBar" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/ly"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/tick_layout"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/invite_img"
                    android:src="@drawable/plus"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="120dp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/tick_layout"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/textColorHint"
                    android:layout_marginLeft="15dp"
                    android:text="Invite"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>